<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:./target/album-manager-db;AUTO_SERVER=TRUE</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <mapping class="com.kidekdev.albummanager.database.entity.ResourceEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.AlbumEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.ProjectEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.FolderEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.ImportRuleEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.ViewEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.JournalEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.JournalEntryEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.TagGroupEntity"/>
    </session-factory>
</hibernate-configuration>
