<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">123</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <mapping class="com.kidekdev.albummanager.database.entity.ResourceEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.AlbumEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.ProjectEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.DynamicResourceEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.ImportRuleEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.ViewEntity"/>
        <mapping class="com.kidekdev.albummanager.database.entity.JournalMessageEntity"/>
    </session-factory>
</hibernate-configuration>
