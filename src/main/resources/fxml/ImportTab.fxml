<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="1000.0" prefWidth="1920.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kidekdev.albummanager.ui.controller.ImportTabController">
    <children>
        <VBox spacing="14.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Демонстрация фасада базы данных" />
                <HBox spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCreateDatabase" text="Создать демо-базу" />
                        <Button fx:id="loadDatabaseButton" mnemonicParsing="false" onAction="#handleLoadDatabase" text="Загрузить базу" />
                    </children>
                </HBox>
                <Label text="Путь к демо-базе:" />
                <Label fx:id="importPathLabel" style="-fx-font-family: 'Consolas';" wrapText="true" />
                <Label fx:id="statusLabel" wrapText="true" />
                <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="820.0">
                    <content>
                        <VBox fx:id="importList" spacing="6.0">
                            <padding>
                                <Insets bottom="8.0" left="4.0" right="4.0" top="8.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
